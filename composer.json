{
  "name": "sultano/mesh",
  "type": "library",
  "description": "Data filtering and validation library",
  "keywords": ["validation", "filters", "rules", "data-format"],
  "license": "MIT",
  "require": {
    "php": "^7.1",
    "zendframework/zend-filter": "^2.8",
    "zendframework/zend-validator": "^2.10"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "Mesh\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MeshTest\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
